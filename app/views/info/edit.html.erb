<%= form_for(@info) do |f| %>
  <div class="field">
    <%= f.label :name, "公司名称" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, "简介" %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :address, "地址" %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :email, "邮箱" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :qq, "QQ" %><br />
    <%= f.text_field :qq %>
  </div>

  <div class="actions">
    <%= f.submit "提交"%>
  </div>
<% end %>
