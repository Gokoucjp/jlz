<h1>所有产品类别</h1>

<table>
  <tr>
    <th>名称</th>
    <th>描述</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= link_to '详细', category %></td>
    <td><%= link_to '编辑', edit_category_path(category) %></td>
    <td><%= link_to '删除', category, method: :delete, data: { confirm: '确定要删除吗，会同时删除该类别下的所有图片?' } %></td>
  </tr>
<% end %>
</table>

